#!/bin/bash

# depends on fbxkb and fcitx

[ -z $(pgrep fcitx) ] || triggered=true
[ -z $(pgrep fcitx) ] && triggered=false

[ $triggered == true ] && kill $(pgrep fcitx); setxkbmap -layout us,ru -option grp:alt_shift_toggle; kill $(pgrep fbxkb) ; fbxkb
[ $triggered == false ] && fcitx -d -r; setxkbmap -layout jp; kill $(pgrep fbxkb) ; fbxkb
