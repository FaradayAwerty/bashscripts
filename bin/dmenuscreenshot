#!/bin/bash

[ -z $MENU ] && MENU=dmenu

# set name for the screenshot
name=~/screenshot$(date +"%d-%m-%H-%M-%S").png

# select option with dmenu
choice=$(printf "fullscreen\nwindow\narea\n" | $MENU "$@")

case $choice in
    fullscreen)
		maim > $name
		;;
    area)
		maim -s -u > $name
        ;;
    window)
		maim -i $(xdotool getactivewindow) > $name
        ;;
esac

xclip -selection clipboard -t image/png -i $name
xclip -selection clipboard -t image/png -i $name
xclip -selection clipboard -t image/png -i $name

