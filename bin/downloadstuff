#! /bin/bash


# --- download youtube videos --- #

youtubeurllistpath=~/.local/share/downloadstuff/youtube-download
youtubedownloadpath=~/video

for i in $(sed s/#.*// $youtubeurllistpath | sed /^$/d)
do
	cd $youtubedownloadpath
	youtube-dl --add-metadata -ic -f "bestvideo[height<=360]+bestaudio/best[height<=360]" $i
done

cd

# --- download torrents --- #

# --- other downloads --- #

