#!/bin/bash

[ -z "$MENU" ] && MENU=dmenu

selstr="terminal_browser\ngui_browser\ndownloader\nmpv\nyoutube-dl"

ch=$(echo -e $selstr | $MENU)

[[ "$ch" == "gui_browser" ]] && $BROWSER "$@"
[[ "$ch" == "terminal_browser" ]] && $TERMINAL -e $TERMINAL_BROWSER "$@" &
[[ "$ch" == "downloader" ]] && $TERMINAL -e $DOWNLOADER "$@" &

if [[ "$ch" == "youtube-dl" ]]; then
	qu=$(echo -e "240\n360\n720" | $MENU)
    $TERMINAL -e youtube-dl --add-metadata -ic -f "bestvideo[height<=$qu]+bestaudio/best[height<=$qu]" "$@" &
fi

if [[ "$ch" == "mpv" ]]; then
	qu=$(echo -e "240\n360\n720" | $MENU)
    mpv --geometry=25%x25%-10-10 --ytdl-format="bestvideo[height<=?$qu]+bestaudio/best" "$@"
fi

