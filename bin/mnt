#! /bin/bash

drives=$(lsblk | grep ─ | sed 's/^..//' | awk '{if($7 == "") {print $1}}')

[ -z "$drives" ] && echo Неподключенных дисков нет && exit

echo "Перед тобой все неподключенные диски. Выбери, какой из них ты хочешь подключить:"
select drive in $drives
do
	udisksctl mount -b /dev/$drive && echo -e "\n\nВсё прошло успешно!\nКогда закончишь, не забудь отключить этот диск, написав\n\tum /dev/$drive"
	exit
done

